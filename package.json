{
  "name": "akadakograph",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "serve": "./scripts/build-env.sh vue-cli-service serve --mode development",
    "build": "./scripts/build-env.sh vue-cli-service build --mode production",
    "test": "./scripts/build-env.sh vue-cli-service test:unit",
    "lint": "bun run lint:biome; bun run lint:eslint",
    "lint:biome": "biome migrate --write && biome check --write .",
    "lint:eslint": "eslint src/** --fix --ext js,vue",
    "prepare": "husky",
    "pretest": "(cd node_modules/canvas; test -f build/Release/canvas.node || npm run install) #bunだとcanvas.nodeが作られないのでこれだけnpmでビルドするWorkaround",
    "sentry:sourcemaps": "sentry-cli sourcemaps inject --org syun --project akadako-graph-vue ./dist && sentry-cli sourcemaps upload --org syun --project akadako-graph-vue ./dist"
  },
  "dependencies": {
    "@sentry/cli": "^2.34.1",
    "@serialport/stream": "^9.2.4",
    "buefy": "^0.9.29",
    "chart.js": "2.9.4",
    "dayjs": "^1.11.13",
    "encoding-japanese": "^2.2.0",
    "exceljs": "^4.4.0",
    "firmata-io": "https://gitpkg.now.sh/yokobond/firmata.js/packages/firmata-io?xcx-g2s",
    "long": "^5.2.3",
    "sass": "^1.77.8",
    "sass-loader": "^14.2.1",
    "vue": "^2.7.16",
    "vue-chartjs": "3.5.1",
    "vue-js-modal": "^2.0.1",
    "vuex": "3.6.2",
    "web-serial-binding": "github:jaz303/web-serial-binding"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.8.3",
    "@sentry/types": "^8.27.0",
    "@sentry/vue": "^8.27.0",
    "@vue/cli-plugin-babel": "^5.0.8",
    "@vue/cli-plugin-eslint": "^5.0.8",
    "@vue/cli-plugin-unit-jest": "^5.0.8",
    "@vue/cli-service": "^5.0.8",
    "@vue/test-utils": "1.3.6",
    "@vue/vue2-jest": "^29.2.6",
    "bun-types": "latest",
    "canvas": "^2.11.2",
    "eslint": "^8.57.0",
    "eslint-plugin-jest": "^27.9.0",
    "eslint-plugin-vue": "^9.28.0",
    "flush-promises": "^1.0.2",
    "husky": "^9.1.5",
    "jest": "^29.7.0",
    "jest-canvas-mock": "^2.5.2",
    "node-polyfill-webpack-plugin": "^4.0.0",
    "node-sass": "^9.0.0",
    "vue-template-compiler": "^2.7.16"
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ],
  "engines": {
    "node": "18.x"
  },
  "peerDependencies": {
    "typescript": "^5.5.3"
  },
  "trustedDependencies": [
    "@biomejs/biome"
  ]
}
